@model CadastroClienteWeb.Integration.Response.ClienteResponse

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container pt-5">
    <div class="row">
        <h1>Editar cliente</h1>
    </div>
    <form asp-action="Edit" id="border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-8 m-2">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control border border-success" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group col-4 m-2">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control border border-success" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-3 m-2">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control border border-success" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-7 m-2">
            <label asp-for="Logotipo" class="control-label"></label>
            <input asp-for="Logotipo" class="form-control border border-success" />
            <span asp-validation-for="Logotipo" class="text-danger"></span>
        </div>
        <div class="form-group col-7 m-2">
            <label asp-for="ListaLogradouros" class="control-label"></label>
            <input asp-for="ListaLogradouros" class="form-control border border-success" />
            <span asp-validation-for="ListaLogradouros" class="text-danger"></span>
        </div>
        <div class="container text-end">
            <input type="submit" value="Concluir" class="btn btn-success borda-concluir" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
