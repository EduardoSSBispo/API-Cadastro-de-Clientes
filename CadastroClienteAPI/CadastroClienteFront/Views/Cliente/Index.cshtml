@model IEnumerable<CadastroClienteWeb.Integration.Response.ClienteResponse>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<div class="container pt-5">
    <table id="tableCliente" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                @* <th>Logotipo</th>
                <th>Logradouros</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    @* <td>@cliente.Logotipo</td> *@
                    @* <td>
                        @foreach(var logra in cliente.ListaLogradouros)
                        {
                            <td>@logra.Nome</td>
                            <td>@logra.ClienteId</td>
                        }
                    </td> *@

                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id=@cliente.Id }) |
                        @Html.ActionLink("Detalhes", "Details", new { id=@cliente.Id }) |
                        @Html.ActionLink("Apagar", "Delete", new { id=@cliente.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

