@model CadastroClienteWeb.Integration.Response.LogradouroResponse

@{
    ViewData["Title"] = "Editar Logradouro";
}

<div class="container pt-5">
    <div class="row">
        <h1>Editar Logradouro</h1>
    </div>
    <form asp-action="Edit" id="border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-8 m-2">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control border border-success" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-4 m-2">
            <label asp-for="ClienteId" class="control-label"></label>
            <input asp-for="ClienteId" class="form-control border border-success" />
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>
        <div class="container text-end">
            <input type="submit" value="Concluir" class="btn btn-success borda-concluir" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
