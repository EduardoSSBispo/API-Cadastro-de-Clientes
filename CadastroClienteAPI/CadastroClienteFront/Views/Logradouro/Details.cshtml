@model CadastroClienteWeb.Integration.Response.LogradouroResponse

@{
    ViewData["Title"] = "Detalhes de Cliente";
}

<div class="container pt-5">
    <div class="row">
        <h1>Detalhes do cliente</h1>
    </div>
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ClienteId)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.ClienteId)
        </dd>
    </dl>
</div>

<div class=" container p-4">
    <a href="@Url.ActionLink("Edit", "Cliente", new {  id = Model.Id })" class="btn btn-success borda-concluir" id="border">Editar</a>
    <a href="@Url.ActionLink("Delete", "Cliente", new {  id = Model.Id })" class="btn btn-danger border-danger" id="border">Apagar</a>
</div>